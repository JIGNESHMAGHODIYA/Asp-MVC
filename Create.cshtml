@model First_Level_Test.Models.MDFirst

<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <center>
        <table border="1" width="20%">
            <h1>Add Data</h1>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Name, new { @class="form-control" })
                </td>
                <td>
                    @Html.EditorFor(model => model.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Name)
                </td>
            </tr>

            <tr>
                <td class="editor-label">
                    @Html.LabelFor(model => model.Address)
                </td>
                <td class="editor-field">
                    @Html.EditorFor(model => model.Address)
                    @Html.ValidationMessageFor(model => model.Address)
                </td>
            </tr>

            <tr>
                <td class="editor-label">
                    @Html.LabelFor(model => model.City_ID)
                </td>
                <td class="editor-field">
                    @Html.DropDownListFor(model => model.City_ID, ViewBag.City as SelectList, "---Select---")
                    @Html.ValidationMessageFor(model => model.City_ID)
                </td>
            </tr>

            <tr>
                <td class="editor-label">
                    @Html.LabelFor(model => model.EmailID)
                </td>
                <td class="editor-field">
                    @Html.EditorFor(model => model.EmailID)
                    @Html.ValidationMessageFor(model => model.EmailID)
                </td>
            </tr>
            <tr>
                <td colspan="2" align="center">
                    <input type="submit" value="Create" />
                </td>
            </tr>
            <tr>
                <td colspan="2" align="center">
                    @Html.ActionLink("Back to List", "Index")
                </td>
            </tr>

        </table>
    </center>
}

<div>

</div>
